<main class="formulario">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto p-2">
                <div class="card">
                    <div class="card-header">
                        <h3>Registrarse</h3>
                    </div>
                    <div class="card-body">
                        <form action="/signup" method="POST">
                            <div class="input-group mb-3">
                                <input type="text" name="fullname" placeholder="Nombre" class="form-control" autofocus required> 
                            </div>
                            <div class="input-group mb-3">
                                <input type="text" name="username" placeholder="Usuario" class="form-control"required> 
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" name="password" placeholder="Contraseña" class="form-control"required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Generar registro
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <span><b>¿Tienes una cuenta? </b></span>
                        <div class="d-grid mb-2">
                        <button onclick="location.href='/signin'" class="btn btn-primary btn-block" >
                           <span style="color: white">Inicia sesión</span> 
                        </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
