<main class="formulario">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto p-2">
                <div class="card">
                    <div class="card-header">
                        <h3>Ingresar a <b>SysMoV</b></h3>
                    </div>
                    <div class="card-body">
                        <form action="/signin" method="POST">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" name="username" placeholder="Usuario" autofocus required >
                            </div>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" name="password" placeholder="Contraseña" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Iniciar sesión
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <span><b>¿Aún no tienes cuenta? </b></span>
                        <div class="d-grid mb-2">
                        <button onclick="location.href='/signup'" class="btn btn-primary btn-block" >
                           <span style="color: white">Regístrate</span> 
                        </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
