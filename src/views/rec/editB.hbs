<div class="scroll"> 
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <form action="/rec/editB/{{bomba.id}}" method="POST">
                            <div class="form-group">
                                <input type="text" value="{{bomba.num_serie}}" class="form-control" name="num_serie" autofocus> 
                            </div>

                            <div class="form-group">
                                <input type="text" value="{{bomba.litrosHora}}" class="form-control" name="litrosHora"> 
                            </div>

                            <div class="form-group">
                                <input type="text" value="{{bomba.denominacion}}" class="form-control" name="denominacion"> 
                            </div>

                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label class="input-group-text" for="inputGroupSelect01">Tipo</label>
                                </div>
                                <select name="tipo_bomba" class="custom-select" id="inputGroupSelect01">
                                    <option {{bomba.tipo_bomba}}></option>
                                    <option value="Periférica">Periférica</option>
                                    <option value="Centrífuga">Centrífuga</option>
                                    <option value="Pistón">Pistón</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Guardar
                                </button>
                                <a href="/rec/bomba" class="btn btn-danger btn-block">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>